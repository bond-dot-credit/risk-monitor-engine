{
  "name": "risk-monitor-engine",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm install --legacy-peer-deps && next build && npm run copy-files",
    "preview": "next start",
    "export": "npm install --legacy-peer-deps && next build && npm run copy-files",
    "copy-files": "copy public\\_redirects out\\_redirects >nul 2>&1 || cp public/_redirects out/_redirects 2>/dev/null || echo 'Copy failed, continuing...'",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=verbose --coverage",
    "test:watch": "vitest",
    "clean": "rm -rf .next out dist",
    "verify-config": "npm run build && npx tsx verify-configuration.ts",
    "execute-rewards": "npm run build && npx tsx real-transaction-executor.ts"
  },
  "dependencies": {
    "@near-js/accounts": "^2.2.6",
    "@near-js/crypto": "^2.2.6",
    "@near-js/keystores": "^2.2.6",
    "@near-js/keystores-browser": "^2.2.6",
    "@near-js/providers": "^2.2.6",
    "@near-js/signers": "^2.2.6",
    "@near-js/utils": "^2.2.6",
    "@near-wallet-selector/core": "^8.10.2",
    "@near-wallet-selector/ledger": "^8.10.2",
    "@near-wallet-selector/modal-ui": "^8.10.2",
    "@near-wallet-selector/my-near-wallet": "^8.10.2",
    "@near-wallet-selector/near-wallet": "^8.9.3",
    "@near-wallet-selector/sender": "^8.10.2",
    "@near-wallet-selector/wallet-utils": "^8.10.2",
    "bn.js": "^5.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-fetch": "^4.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.542.0",
    "near-api-js": "^6.2.6",
    "near-seed-phrase": "^0.2.1",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jsdom": "^26.1.0",
    "ncp": "^2.0.0",
    "next-export-optimize-images": "^4.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vitest": "^2.1.9"
  }
}
