# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bondcredit
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bondcredit
DB_USER=bondcredit
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Application Configuration
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0
NEXT_TELEMETRY_DISABLED=1

# Security
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_32_characters
SESSION_SECRET=your_session_secret_key

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# External Services
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
POLYGON_RPC_URL=https://polygon-rpc.com
PRIVATE_KEY=your_private_key_for_blockchain_operations

# Monitoring
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000
LOG_LEVEL=info

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@bond.credit

# AWS Configuration (For production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=bond-credit-assets

# Docker Compose Environment
POSTGRES_DB=bondcredit
POSTGRES_USER=bondcredit
POSTGRES_PASSWORD=defaultpassword
REDIS_PASSWORD=defaultpassword
GRAFANA_PASSWORD=admin

# Production URLs
PRODUCTION_URL=https://bond.credit
STAGING_URL=https://staging.bond.credit
API_URL=https://api.bond.credit

# SSL Certificates (For nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_MONITORING=true

# Development
DEV_DATABASE_URL=postgresql://bondcredit:bondcredit@localhost:5432/bondcredit_dev
DEV_REDIS_URL=redis://localhost:6379/1
